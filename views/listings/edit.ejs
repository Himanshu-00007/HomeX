<% layout("layouts/boilerplate") %>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%=list._id%>?_method=PUT">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="title" value="<%=list.title%>" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control"><%=list.description%></textarea>
    </div>
        <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="image" value="<%=list.image%>" type="text" class="form-control">
    </div>
    <div class="row">
        <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input name="price" value="<%=list.price%>" type="number" class="form-control">
    </div>
        <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label>
        <input name="country" value="<%=list.country%>" type="text" class="form-control">
    </div>
</div>
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="location" value="<%=list.location%>" type="text" class="form-control">
    </div>
        <button class="btn btn-success">Add</button>
    </form>
    </div>
  </div>
  <br>
</body>